{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["plugin:react/recommended", "google"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"no-undef": 2,
		"indent": ["error", "tab"],
		"no-tabs": 0,
		"consistent-return": 2,
		"no-else-return": 0,
		"semi": [1, "always"],
		"space-unary-ops": 2,
		"comma-dangle": 0,
		"object-curly-spacing": 0,
		"quotes": [
			"error",
			"double",
			{ "avoidEscape": true, "allowTemplateLiterals": true }
		]
	}
}
